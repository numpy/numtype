{
  "version": "2.0.0",
  "tasks": [{
    "label": "ruff format",
    "type": "shell",
    "command": "uv run ruff format",
    "group": "build",
    "presentation": {
      "echo": true,
      "reveal": "always",
      "focus": false,
      "panel": "shared"
    },
    "problemMatcher": []
  }, {
    "label": "dprint format",
    "type": "shell",
    "command": "uv run dprint fmt",
    "group": "build",
    "presentation": {
      "echo": true,
      "reveal": "always",
      "focus": false,
      "panel": "shared"
    },
    "problemMatcher": []
  }, {
    "label": "basedpyright",
    "type": "shell",
    "command": "uv run basedpyright",
    "group": {
      "kind": "build",
      "isDefault": false
    },
    "presentation": {
      "clear": true
    },
    "problemMatcher": [{
      "owner": "basedpyright",
      "fileLocation": "absolute",
      "pattern": {
        "regexp": "^(.+):(\\d+):(\\d+) - (error|warning|info): (.+)$",
        "file": 1,
        "line": 2,
        "column": 3,
        "severity": 4,
        "message": 5
      }
    }],
    "options": {
      "cwd": "${workspaceFolder}"
    }
  }, {
    "label": "mypy",
    "type": "shell",
    "command": "uv run --no-editable mypy .",
    "group": {
      "kind": "build",
      "isDefault": false
    },
    "presentation": {
      "clear": true
    },
    "problemMatcher": [{
      "owner": "mypy",
      "fileLocation": "absolute",
      "pattern": {
        "regexp": "^(.+):(\\d+): (error|warning|note): (.+)$",
        "file": 1,
        "line": 2,
        "severity": 3,
        "message": 4
      }
    }],
    "options": {
      "cwd": "${workspaceFolder}"
    }
  }, {
    "label": "stubtest",
    "type": "shell",
    "command": "uv run tool/stubtest.py",
    "group": "test",
    "presentation": {
      "echo": true,
      "reveal": "always",
      "focus": false,
      "panel": "shared"
    },
    "problemMatcher": []
  }, {
    "label": "testgen",
    "type": "shell",
    "command": "uv run tool/testgen.py",
    "group": "build",
    "presentation": {
      "echo": true,
      "reveal": "always",
      "focus": false,
      "panel": "shared"
    },
    "problemMatcher": []
  }, {
    "label": "pytest",
    "type": "shell",
    "command": "uv run pytest",
    "group": "test",
    "presentation": {
      "echo": true,
      "reveal": "always",
      "focus": false,
      "panel": "shared"
    },
    "problemMatcher": [{
      "owner": "pytest",
      "fileLocation": "absolute",
      "pattern": {
        "regexp": "^(.+):(\\d+): (.+)$",
        "file": 1,
        "line": 2,
        "message": 3
      }
    }],
    "options": {
      "cwd": "${workspaceFolder}"
    }
  }, {
    "label": "tox",
    "type": "shell",
    "command": "uvx tox p",
    "group": "test",
    "presentation": {
      "echo": true,
      "reveal": "always",
      "focus": false,
      "panel": "shared"
    },
    "problemMatcher": [],
    "options": {
      "cwd": "${workspaceFolder}"
    }
  }, {
    "label": "mkdocs serve",
    "type": "shell",
    "command": "uv run mkdocs serve",
    "group": "build",
    "isBackground": true,
    "presentation": {
      "reveal": "silent",
      "panel": "new"
    },
    "problemMatcher": [{
      "base": "$tsc",
      "background": {
        "activeOnStart": true,
        "beginsPattern": "Building documentation...",
        "endsPattern": "Serving on"
      }
    }],
    "options": {
      "cwd": "${workspaceFolder}"
    }
  }]
}
